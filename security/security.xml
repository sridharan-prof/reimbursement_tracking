<odoo>
    <data noupdate="0">

        <!-- Employee Group -->
        <record id="group_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <!-- Manager Group -->
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <!-- Rule: Employee can see only their record -->
        <record id="employee_self_rule" model="ir.rule">
            <field name="name">Employee Own Profile Rule</field>
            <field name="model_id" ref="model_employee_profile"/>
            <field name="groups" eval="[(4, ref('reimbursement_tracking.group_employee'))]"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>

        <!-- Rule: Manager can see all records -->
        <record id="manager_self_rule" model="ir.rule">
            <field name="name">Manager All Profiles Rule</field>
            <field name="model_id" ref="model_employee_profile"/>
            <field name="groups" eval="[(4, ref('reimbursement_tracking.group_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

    </data>
</odoo>
