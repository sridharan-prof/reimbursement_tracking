<odoo>

  <template id="remove_header" inherit_id="website.layout">
    <xpath expr="//header[@id='top']" position="replace">
      <!-- Empty: Removes the default header -->
    </xpath>
  </template>

  <template id="remove_footer" inherit_id="website.layout">
    <xpath expr="//div[@id='footer']" position="replace">
      <!-- Empty: Removes the default footer -->
    </xpath>
  </template>

  <template id="reimbursement_details.departments_page_template" name="Departments Page">
    <t t-call="website.layout">
      <!--Navbar -->
      <nav class="navbar navbar-expand-lg custom-navbar">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">MyCompany</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/departments">Departments</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/employees">Employees</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contactus">Contact Us</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <div class="container ">
        <!--Page Content -->
        <div class="container mt-4 o_dept_card">
          <h2 class="mb-4">Department Directory</h2>

          <!--Search Bar -->
          <div class="input-group mb-3">
            <input type="text" id="dept-search" class="form-control" placeholder="Search departments..." aria-label="Search" />
            <button class="btn search_button" type="button">Search</button>
          </div>

          <!--Department List -->
          <div class="row">
            <t t-foreach="departments" t-as="dept">
              <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                  <div class="card-body">
                    <h5 class="card-title"><t t-esc="dept.name"/></h5>
                    <p class="card-text">Department ID: <t t-esc="dept.dept_id"/></p>
                    <a t-att-href="'/department/' + str(dept.id)" class="btn details_button">View Details</a>
                  </div>
                </div>
              </div>
            </t>
          </div>
        </div>
      </div>

    </t>
  </template>
</odoo>
