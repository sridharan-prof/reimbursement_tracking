<odoo>


  <template id="reimbursement_tracking.departments_page_template" name="Departments Page">
    <t t-call="website.layout">
      <div class="container ">
        <!--Page Content -->
        <div class="container mt-4 o_dept_card">
          <h2 class="mb-4">Department Directory</h2>

          <!--Search Bar -->
          <div class="input-group mb-3">
            <input type="text" id="dept-search" class="form-control" placeholder="Search departments..." aria-label="Search" />
            <button class="btn search_button" type="button">Search</button>
          </div>

          <!--Department List -->
          <div class="row">
            <t t-foreach="departments" t-as="dept">
              <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                  <div class="card-body">
                    <h5 class="card-title"><t t-esc="dept.name"/></h5>
                    <p class="card-text">Department ID: <t t-esc="dept.dept_id"/></p>
                    <a t-att-href="'/department/' + str(dept.id)" class="btn details_button">View Details</a>
                  </div>
                </div>
              </div>
            </t>
          </div>
        </div>
      </div>

    </t>
  </template>
</odoo>
