<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_profile_view_form" model="ir.ui.view">
        <field name="name">employee.profile.view.form</field>
        <field name="model">employee.profile</field>
        <field name="arch" type="xml">
            <form string="Employee Profile">
                <sheet>
                    <group>
                        <field name="employee_id"></field>
                        <field name="first_name"></field>
                        <field name="middle_name"></field>
                        <field name="last_name"></field>
                        <field name="department"></field>
                        <field name="email"></field>
                        <field name="company_id"></field>
                        <field name="user_id"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE STRUCTURE  -->
    <record id="employee_profile_view_tree" model="ir.ui.view">
        <field name="name">employee.profile.view.tree</field>
        <field name="model">employee.profile</field>
        <field name="arch" type="xml">
            <tree string="Employee Profile">
                <field name="employee_id"></field>
                <field name="first_name"></field>
                <field name="middle_name"></field>
                <field name="last_name"></field>
                <field name="department"></field>
                <field name="email"></field>
                <field name="company_id"></field>
                <field name="user_id"></field>
            </tree>
        </field>
    </record>


    <record id="action_employee_profile" model="ir.actions.act_window"> <!-- is a window action  what Odoo uses to open views (like forms or lists)-->
        <field name="name">Employee Profile</field> <!--  label for the action-->
        <field name="res_model">employee.profile</field> <!-- res means resource that target which model to open-->
        <field name="view_mode">tree,form</field> <!-- type of views to show(form, tree, kanban)-->
    </record>

</odoo>
