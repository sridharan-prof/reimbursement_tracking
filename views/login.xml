<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="login_page" name="Login Page" t-name="reimbursement_tracking.login_page">
    <t t-call="website.layout">

        <!--  Login Header -->
        <header id="login_custom_header" class="text-white py-2" style="background-color: #0052cc;">
            <div class="container">
            <h4 class="mb-0">Welcome to Authenzia</h4>
            </div>
        </header>

        <!-- Login Body -->
        <form action="/login" method="post">
             <!-- CSRF token for security -->
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
            <!-- Alter Message -->
            <t t-if="error">
                <div class="alert alert-danger w-100 text-center">
                    <t t-esc="error"/>
                </div>
            </t>

            <div class="d-flex justify-content-center align-items-center mt-4 pt-3">
                <div class="card login pt-4 d-flex flex-column align-items-center">
                    <!-- Logo -->
                    <div class="text-center">
                        <img src="/reimbursement_tracking/static/src/img/logo.jpg" alt="Company Logo" class="img-fluid" style="max-height:100px;"/>
                    </div>
                    <div class="text-center">
                        <img src="/reimbursement_tracking/static/src/img/company_name.png" alt="Company Logo" class="img-fluid" style="max-height:50px;"/>
                    </div>

                    <!-- Email / Username -->
                    <div class="form-floating mb-3 p-0 text-center email_pass">
                        <input type="text" class="form-control email" id="floatingInputemail" name="login" placeholder="name@example.com" required="required"/>
                        <label for="floatingInputemail">Email or phone</label>
                    </div>

                    <!-- Password -->
                    <div class="form-floating mt-3 text-center email_pass">
                        <input type="password" class="form-control pass" id="floatingPassword" name="password" placeholder="Password" required="required"/>
                        <label for="floatingPassword">Password</label>
                    </div>

                    <!-- Forgot password -->
                    <div class="mt-3 text-start px-3">
                        <a href="/web/reset_password" class="forgot">Forgot password?</a>
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn btn-primary btn-lg my-3 sign-in">Sign in</button>
                </div>
            </div>
        </form>


    </t>
  </template>
</odoo>
