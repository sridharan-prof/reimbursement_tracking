<odoo>
    <template id="reimbursement_form_template" name="Reimbursement Form">
        <t t-call="website.layout">
            <div id="wrap" class="container mt-5">
                <section>
                    <h3 class="mb-4">Reimbursement Form</h3>

                    <t t-if="request.params.get('submitted')">
                        <div class="alert alert-success">
                            Your reimbursement request has been submitted successfully!
                        </div>
                    </t>

                    <div class="card shadow-sm border-0 m-4">
                        <div class="card-body">
                            <form action="/reimbursement/submit" method="post" class="mt-3">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                <!-- Autofilled Employee Name -->
                                <div class="mb-3">
                                    <label class="form-label">Employee</label>
                                    <input type="text" class="form-control" readonly="readonly"
                                           t-att-value="employee.name"/>
                                </div>

                                <!-- Reimbursement Type -->
                                <div class="mb-3">
                                    <label class="form-label">Reimbursement Type</label>
                                    <select name="type_id" class="form-select">
                                        <t t-foreach="request.env['reimbursement.type'].sudo().search([])" t-as="rtype">
                                            <option t-att-value="rtype.id">
                                                <t t-esc="rtype.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>

                                <!-- Amount -->
                                <div class="mb-3">
                                    <label class="form-label">Amount</label>
                                    <input type="number" class="form-control" name="amount" required="required"/>
                                </div>

                                <!---->

                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn search_button px-4">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </section>
            </div>
        </t>
    </template>
</odoo>
