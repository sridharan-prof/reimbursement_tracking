<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="custom_header" inherit_id="website.layout">
    <xpath expr="//header" position="replace">
      <t t-if="request.httprequest.path != '/login' "> <!--This header won't render for /login -->
        <header id="custom_header" class="o_my_custom_header">
          <nav class="navbar navbar-expand-lg w-100" style="background-color: #0052cc; margin:0; padding:0;">
            <div class="container-fluid px-4">
              <!-- Company Logo -->
              <a class="nav-link" href="/">
                <img src="/reimbursement_tracking/static/src/img/company_full_logo.png"
                     alt="Company Logo"
                     class="img-fluid"
                     style="max-height:40px;"/>
              </a>

              <!-- Mobile Toggler -->
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                      data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                      aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <!-- Menu Items -->
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/">Dashboard</a>
                  </li>
                  
                      <!-- Visible only for Employee -->
                  <t t-if="request.env.user.has_group('base.group_user') and not request.env.user.has_group('hr.group_hr_manager')">
                    <li class="nav-item"><a class="nav-link" href="/employeeprofile">Employee</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Attendance</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Task</a></li>
                    <li class="nav-item"><a class="nav-link" href="/reimbursement_form">Reimbursement</a></li>
                    <li class="nav-item"><a class="nav-link" href="/contactus">Contact</a></li>
                  </t>
                  
                      <!-- Visible only for Manager/HR Manager/Administrator -->
                  <t t-if="request.env.user.has_group('hr.group_hr_user') or request.env.user.has_group('hr.group_hr_manager') or request.env.user.has_group('base.group_system')">
                    <li class="nav-item"><a class="nav-link" href="#">User &amp; Companies</a></li>
                    <li class="nav-item"><a class="nav-link" href="/employeeprofile">Employees</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Attendance</a></li>
                    <li class="nav-item"><a class="nav-link" href="/departments">Departments</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Task</a></li>
                    <li class="nav-item"><a class="nav-link" href="/reimbursement_form">Reimbursement</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Reports</a></li>
                  </t>
                </ul>
              </div>
            </div>
          </nav>
        </header>
      </t>
    </xpath>
  </template>

  <!-- Example Hello Page -->
  <template id="hello_page_template" name="Hello OWL Page">
    <t t-call="website.layout">
      <div class="container mt-5">
        <h2 class="text-center">Frontend OWL Examples</h2>
        <owl-component name="reimbursement_tracking.HelloComponent"/> <!-- placeholder that mounts a JS OWL component into a QWeb view-->
      </div>
    </t>
  </template>

  <!-- Remove Footer -->
  <template id="remove_footer" inherit_id="website.layout">
    <xpath expr="//div[@id='footer']" position="replace">
      <!-- Empty: Removes the default footer -->
    </xpath>
  </template>
</odoo>
